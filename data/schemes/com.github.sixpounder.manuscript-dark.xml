<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="manuscript-dark" _name="Manuscript Dark" version="1.0">
  <author>Andrea Coronese</author>
  <_description>Dark manuscript scheme</_description>

  <style name="text"            foreground="#fafafa" background="#3D3D3D"/>
  <style name="cursor"          foreground="#e4c6fa"/>
  <style name="selection"       foreground="#fafafa" background="#3689e6"/>
  <style name="search-match"    foreground="#fafafa" background="#de3e80"/>

  <!-- Bold -->
  <style name="def:strong-emphasis" bold="true"/>

  <!-- Italic -->
  <style name="def:emphasis" foreground="#fafafa" italic="true"/>
</style-scheme>
